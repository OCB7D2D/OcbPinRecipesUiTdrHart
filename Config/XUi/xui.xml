<configs>

	<!-- Remove original UI window group -->
	<remove xpath="/xui/ruleset[@name='default']/window_group[@name='pinRecipes']" />

	<!-- Pinnable Recipes -->
	<append xpath="/xui/ruleset[@name='default']">
		<window_group name="pinRecipes" actionSet="false" controller="XUiC_PinRecipes, PinRecipes">
			<window name="windowPinRecipes" />
		</window_group>
	</append>

</configs>
